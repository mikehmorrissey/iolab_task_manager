<%provide :title, 'Sign in' %>
<%provide :nav, 'hide'%>
<section>
	<header>
		<h1> Sign in</h1>
	</header>

	<%= form_for(:session, url: sessions_path) do |f| %>
	  
	  <div class="formfield">  
        <%= f.text_field :email, placeholder: 'Email' %>
      </div>
      <div class ="formfield">
        <%= f.password_field :password, placeholder: 'Password' %>
      </div>
      <div class="actions">
        <%= f.submit "Sign in", class: "submit" %>
      </div>
    <% end %>
</section>